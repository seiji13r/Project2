<!--Login Modal-->
<div class="login-modal">
    <div class="login-modal-content">
        <span class="close">&times;</span>
        <h2 class="login-header">Account Login</h2>

        <form method="POST">
            <div class="login__username">
                <label>Username:</label>
                <input type="text" class="form-control" name="username" placeholder="Username">
            </div>
            <div class="login__password">
                <label>Password:</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button class="submit-button" type="submit" formaction="/login">Login</button>

        </form>
    </div>
</div>

<!--Register Modal-->
<div class="register-modal">
    <div class="register-modal-content">
        <span class="close">&times;</span>
        <h2 class="register-header">Sign Up!</h2>
        <form method="POST" action="/users/register">
            <div class="register__name">
                <label>Name:</label>
                <input type="text" class="form-control" placeholder="Name" name="name">
            </div>
            <div class="register__username">
                <label>Username:</label>
                <input type="text" class="form-control" placeholder="Username" name="username">
            </div>
            <div class="register__email">
                <label>Email:</label>
                <input type="email" class="form-control" placeholder="Email" name="email">
            </div>
            <div class="register__password">
                <label>Password:</label>
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <div class="register__password--confirm">
                <label>Confirm Password:</label>
                <input type="password" class="form-control" placeholder="Confirm Password" name="password2">
            </div>
            <button class="submit-button submit-button__register" type="submit">Sign Up</button>
        </form>
    </div>
</div>

